<html>
    <head>
        <% include ../partial/head.ejs %>
    </head>
    <body>
        <div class="jumbotron">
            <div class="container text-center">
                <h1>Great Thoughts Blog</h1>
                <p>This is the description</p>
            </div>
        </div>
        
        <%- include ../partial/navbar.ejs %>
        
        <div class="container">
            <div class="row">
                <a class="btn btn-success" href="/Post/edit">
                    New Post
                </a>
            </div>
            <% for(var i=0; i<posts.length; i++) { %>
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <a class="btn btn-warning" href="/Post/edit?postID=<%=posts[i]._id%>">Edit</a>
                            <a class="btn btn-danger" href="#">Delete</a>
                            <% if (posts[i].published) { %>
                            <a class="btn btn-success" href="#">Unpublish</a>
                            <% } else { %>
                            <a class="btn btn-primary" href="#">Publish</a>
                            <% } %>
                        </div>
                        <div class="col-lg-9">
                            <h3><%= posts[i].title %></h3>
                        </div>
                        <div class="col-lg-3">
                            <%= posts[i].timestamp %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <%= posts[i].author %>
                        </div>
                    </div>
                </div>
                
                <div class="panel-body">
                    <%- posts[i].content %>
                </div>
                
                <div class="panel-footer">
                    <%= posts[i].tags %>
                </div>
            </div>
            <% } %>
        </div>
    </body>
</html>
<html>
    <head>
        <% include ../partial/head.ejs %>
    </head>
    <body>
        <div class="jumbotron">
            <div class="container text-center">
                <h1>Great Thoughts Blog</h1>
                <p>This is the description</p>
            </div>
        </div>
        
        <nav class="navbar navbar-inverse">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>                        
                </button>
                <div class="navbar-brand"><img src="/testicon.png"></div>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Posts</a></li>
                    <li class="active"><a href="/Post/manage">My Posts</a></li>
                </ul>
            </div>
        </nav>
        
        <div class="container">
            <div class="row">
                <a class="btn btn-success" href="/Post/edit">
                    New Post
                </a>
            </div>
            <% for(var i=0; i<posts.length; i++) { %>
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-12">
                            <a class="btn btn-warning" href="/Post/edit?postID=<%=posts[i]._id%>">Edit</a>
                            <div class="btn btn-danger">Delete</div>
                            <% if (posts[i].published) { %>
                            <div class="btn btn-success">Unpublish</div>
                            <% } else { %>
                            <div class="btn btn-primary">Publish</div>
                            <% } %>
                        </div>
                        <div class="col-lg-9">
                            <h3><%= posts[i].title %></h3>
                        </div>
                        <div class="col-lg-3">
                            <%= posts[i].timestamp %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <%= posts[i].author %>
                        </div>
                    </div>
                </div>
                
                <div class="panel-body">
                    <%- posts[i].content %>
                </div>
                
                <div class="panel-footer">
                    <%= posts[i].tags %>
                </div>
            </div>
            <% } %>
        </div>
    </body>
</html>
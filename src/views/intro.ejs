<html>
    <head>
        <% include ../partial/head.ejs %>
    </head>
    <body>
        <div class="jumbotron">
            <div class="container text-center">
                <h1>Great Thoughts Blog</h1>
                <p>This is the description</p>
            </div>
        </div>
        
        <%- include ../partial/navbar.ejs %>
        
        <div class="container">
            <div class="col-md-9">
                <!-- This syntax for the ejs is for non-escaped strings. This will render HTML in the post content as actual HTML. -->
                <%-post%>
            </div>
            <div class="col-md-3">
                <table class="table">
                    <thead>
                        <tr>
                            <td>Categories</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i=0; i<categories.length; i++) { %>
                        <tr>
                            <td><a href="/search/category?categoryName=<%=categories[i].name%>"><%=categories[i].name%></a></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <footer class="container-fluid text-center">
            <p>Online Store Copyright</p>  
            <form class="form-inline">Get deals:
                <input type="email" class="form-control" size="50" placeholder="Email Address">
                <button type="button" class="btn btn-danger">Sign Up</button>
            </form>
        </footer>
    </body>
</html>